{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "declaration": true,
    "declarationDir": "./dist/types",
    "target": "ESNext",
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleDetection": "auto",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
