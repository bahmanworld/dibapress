{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "declaration": true,
    "declarationDir": "./dist/types",
    "target": "ES6",
    "jsx": "preserve",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleDetection": "auto"
  }
}
